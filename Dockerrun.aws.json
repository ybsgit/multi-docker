{
	"AWSECDockerVersion": 2,
	"containerDefinitions": [{
			"name": "client",
			"image": "yograj/multi-client",
			"hostname": "client",
			"essential": false,
                        "memory": 128 
		},

		{
			"name": "server",
			"image": "yograj/multi-server",
			"hostname": "api",
			"essential": false,
			"memory": 128
		},

		{
			"name": "worker",
			"image": "yograj/multi-worker",
			"hostname": "worker",
			"essential": false,
			"memory": 128
		},

		{
			"name": "nginx",
			"image": "yograj/multi-nginx",
			"hostname": "nginx",
			"essential": true,
			"memory": 128,
			"portMappings": [{
				"hostPort": 80,
				"containerPort": 80
			}],
			"links": ["client", "server"]

		}

	]



}
